<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerQuiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Overlay UI -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/uiOverlayQuiz"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:clipChildren="false"
        android:clipToPadding="false" >

        <!-- Groupe Question + Timer + Réponses -->
        <LinearLayout
            android:id="@+id/blockQA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Question -->


            <!-- Grille 2x2 des réponses, juste sous le timer -->

            <TextView
                android:id="@+id/nbQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_text_overlay"
                android:gravity="center"
                android:padding="10dp"
                android:text="x/y"
                android:textColor="@color/blanc_nuage"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_text_overlay"
                android:gravity="center"
                android:padding="10dp"
                android:text="Votre question ici"
                android:textColor="@color/blanc_nuage"
                android:textSize="28sp"
                android:textStyle="bold" />

            <GridLayout
                android:id="@+id/gridAnswers"
                android:layout_width="778dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true"
                app:layout_constraintBottom_toTopOf="@id/btnValidateQuiz"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textQuestion">

                <Button
                    android:id="@+id/btnAnswer1"
                    style="@style/OrisonButtonLight"
                    android:onClick="onRepClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="Réponse A"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btnAnswer2"
                    style="@style/OrisonButtonLight"
                    android:onClick="onRepClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="Réponse B"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btnAnswer3"
                    style="@style/OrisonButtonLight"
                    android:onClick="onRepClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="Réponse C"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btnAnswer4"
                    style="@style/OrisonButtonLight"
                    android:onClick="onRepClick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="Réponse D"
                    android:textSize="25sp" />
            </GridLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnValidateQuiz"
            style="@style/OrisonButtonAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Valider"
            android:onClick="onValidClick"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <ImageView
            android:id="@+id/logoQuiz"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:maxWidth="560dp"
            android:src="@drawable/logoblanc"
            app:layout_constraintBottom_toBottomOf="@+id/btnValidateQuiz"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnValidateQuiz"
            app:layout_constraintVertical_bias="0.309" />


        <com.example.quizpirate.Utils.ArcProgressBar
            android:id="@+id/arcProgressBar"
            android:layout_width="632dp"
            android:layout_height="211dp"
            android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toTopOf="@+id/blockQA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clipChildren="false"
            android:clipToPadding="false"  />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
